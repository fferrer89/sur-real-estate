<main>
    <h2>Log In</h2>
    <form action="/login" method="post">
        <label>Username
            <input type="text" name="username" pattern="^\w.*$" required>
        </label>
        <br>
        <label>Password
            <input type="password" name="password" pattern="^\w.*$" required>
        </label>
        <br>
        <button type="submit">Log In</button>
    </form>
</main>